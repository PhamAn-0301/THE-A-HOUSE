<main class="container room-detail" style="padding:28px 0">
    <div class="detail-grid">
        <!-- LEFT: media -->
        <section class="media">
            <div class="hero-img">
                <img id="mainImg" src="{{service.image_url}}" alt="{{service.room_name}}"
                    onerror="this.src='/img/placeholder.jpg'">
                <span class="ribbon">Còn Phòng</span>
            </div>

            <div class="thumbs">
                {{#if gallery.length}}
                {{#each gallery}}
                <button class="thumb" data-src="{{this}}">
                    <img src="{{this}}" alt="thumb">
                </button>
                {{/each}}
                {{else}}
                <button class="thumb active" data-src="{{service.image_url}}">
                    <img src="{{service.image_url}}" alt="thumb">
                </button>
                {{/if}}
            </div>
        </section>

        <!-- RIGHT: info -->
        <aside class="info">
            <div class="addr-top">
                {{#if service.address}}<div class="addr-line"><b>{{service.address}}</b></div>{{/if}}
                {{#if service.district}}<div class="addr-line">Quận {{service.district}}{{#if service.city}},
                    {{service.city}}{{/if}}</div>{{/if}}
            </div>

            <div class="opt-box">
                <label class="opt-label">Chọn một tuỳ chọn</label>
                <div class="opt-chips">
                    <a class="chip">P302</a>
                    <a class="chip">P502</a>
                    <a class="chip">P503</a>
                    <a class="chip">P702</a>
                </div>
            </div>

            <article class="desc">
                <p>JinJoo Home hiện đang cho thuê phòng tại
                    {{#if service.district}}Quận {{service.district}}, {{/if}}
                    {{#if service.city}}{{service.city}}, {{/if}}
                    {{#if service.address}}{{service.address}}{{/if}}.
                    Căn phòng được xây dựng theo mô hình studio, có khu bếp và nhà vệ sinh riêng.
                </p>
                {{#if service.detail}}
                <div class="bullets">
                    {{{service.detail}}}
                </div>
                {{/if}}
            </article>

            <div class="feature-line">
                {{#if service.icon}}<span class="badge">{{service.icon}}</span>{{/if}}
            </div>

            <div class="price-cta">
                <div class="price"><b>Giá:</b> {{formatVND service.price}}</div>
                <div class="cta">
                    <a class="btn-primary" target="_blank"
                        href="https://www.google.com/maps/search/{{service.address}}">Xem bản đồ</a>
                    <a class="btn-outline" href="https://zalo.me/0772501585">Đặt lịch ngay</a>
                </div>
            </div>
        </aside>
    </div>
</main>

{{!-- ========== PHÒNG TƯƠNG TỰ ========== --}}
{{#if relatedRooms.length}}
<section class="related-rooms container">
    <div class="related-head">
        <h3>Phòng tương tự</h3>
        <a class="see-all" href="/services">Xem tất cả</a>
    </div>

    <div class="related-grid">
        {{#each relatedRooms}}
        <a href="/services/{{id}}" class="rel-card" aria-label="{{room_name}}">
            <div class="rel-thumb">
                <img src="{{image_url}}" alt="{{room_name}}" onerror="this.src='/img/placeholder.jpg'">
            </div>
            <div class="rel-body">
                <h4 class="rel-title" title="{{room_name}}">{{room_name}}</h4>
                <div class="rel-meta">
                    <span class="rel-price">{{formatVND price}} ₫</span>
                    <span class="rel-loc">
                        {{#if district}}Quận {{district}}, {{/if}}{{#if city}}{{city}}{{else}}Hồ Chí Minh{{/if}}
                    </span>
                </div>
            </div>
        </a>
        {{/each}}
    </div>
</section>
{{/if}}

<!-- đổi ảnh khi bấm thumbnail -->
<script>
    document.addEventListener('click', function (e) {
        const btn = e.target.closest('.thumb');
        if (!btn) return;
        const src = btn.getAttribute('data-src');
        const main = document.getElementById('mainImg');
        if (src && main) { main.src = src; }
        document.querySelectorAll('.thumb').forEach(t => t.classList.remove('active'));
        btn.classList.add('active');
    });
</script>

<!-- cố định min-height để footer không bị “trồi” lên ở trang ngắn -->
<script>
    (function () {
        function setDetailMinHeight() {
            const main = document.querySelector('.room-detail');
            const header = document.querySelector('header');
            const footer = document.querySelector('footer');
            if (!main) return;
            const hHeader = header ? header.offsetHeight : 0;
            const hFooter = footer ? footer.offsetHeight : 0;
            main.style.minHeight = `calc(100vh - ${hHeader}px - ${hFooter}px)`;
        }
        window.addEventListener('load', setDetailMinHeight);
        window.addEventListener('resize', setDetailMinHeight);
    })();
</script>

