<main class="container room-detail" style="padding:28px 0">
    <div class="detail-grid">
        <!-- LEFT: media -->
        <section class="media">
            <div class="hero-img">
                <img id="mainImg" src="{{service.image_url}}" alt="{{service.room_name}}"
                    onerror="this.src='/img/placeholder.jpg'">
                <span class="ribbon">Còn Phòng</span>
            </div>

            <div class="thumbs">
                {{#if gallery.length}}
                {{#each gallery}}
                <button class="thumb" data-src="{{this}}">
                    <img src="{{this}}" alt="thumb">
                </button>
                {{/each}}
                {{else}}
                <button class="thumb active" data-src="{{service.image_url}}">
                    <img src="{{service.image_url}}" alt="thumb">
                </button>
                {{/if}}
            </div>
        </section>

        <!-- RIGHT: info -->
        <aside class="info">
            <div class="addr-top">
                {{#if service.address}}<div class="addr-line"><b>{{service.address}}</b></div>{{/if}}
                {{#if service.district}}<div class="addr-line">Quận {{service.district}}{{#if service.city}},
                    {{service.city}}{{/if}}</div>{{/if}}
            </div>

            <div class="opt-box">
                <label class="opt-label">Chọn một tuỳ chọn</label>
                <div class="opt-chips">
                    <a class="chip">P302</a>
                    <a class="chip">P502</a>
                    <a class="chip">P503</a>
                    <a class="chip">P702</a>
                </div>
            </div>

            <article class="desc">
                <p>JinJoo Home hiện đang cho thuê phòng tại {{#if service.district}}Quận {{service.district}},
                    {{/if}}{{#if service.city}}{{service.city}}, {{/if}}{{#if
                    service.address}}{{service.address}}{{/if}}. Căn phòng được xây dựng theo mô hình studio, có khu bếp
                    và nhà vệ sinh riêng.</p>
                {{#if service.detail}}
                <div class="bullets">
                    {{{service.detail}}}
                </div>
                {{/if}}
            </article>

            <div class="feature-line">
                {{#if service.icon}}
                <span class="badge">{{service.icon}}</span>
                {{/if}}
            </div>

            <div class="price-cta">
                <div class="price"><b>Giá:</b> {{service.price}} ₫</div>
                <div class="cta">
                    <a class="btn-primary" target="_blank"
                        href="https://www.google.com/maps/search/{{service.address}}">Xem bản đồ</a>
                    <a class="btn-outline" href="https://zalo.me/0772501585">Đặt lịch ngay</a>
                </div>
            </div>
        </aside>
    </div>
</main>

<!-- nhỏ gọn: đổi ảnh khi bấm thumbnail -->
<script>
    document.addEventListener('click', function (e) {
        const btn = e.target.closest('.thumb');
        if (!btn) return;
        const src = btn.getAttribute('data-src');
        const main = document.getElementById('mainImg');
        if (src && main) { main.src = src; }
        document.querySelectorAll('.thumb').forEach(t => t.classList.remove('active'));
        btn.classList.add('active');
    });
</script>

